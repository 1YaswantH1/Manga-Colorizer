{
    "name": "Manga Colorizer",
    "version": "0.1.0",
    "description": "Bringing mangas to life",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["https://*.manganelo.tv/*"],
    "content_scripts": [
      {
        "matches": ["https://*.manganelo.tv/chapter/*"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/ext-icon.png"
        ],
        "matches": ["https://*.manganelo.tv/*"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/ext-icon.png",
        "24": "assets/ext-icon.png",
        "32": "assets/ext-icon.png"
      },
      "default_title": "Manga Colorizer Configuration",
      "default_popup": "popup.html"
    },
    "manifest_version": 3,
    "browser_specific_settings": {
      "gecko": {
        "id": "podmnbmloedpbinitcmjepigdkbjbjrg@xodalg.com"
      }
    }
}
